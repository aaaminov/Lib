@model Author
@{
	Author author = Model;
	if (author != null) {
		<div class="border rounded mb-3" style="width: 256px;">
			<a asp-controller="Author" asp-action="One" asp-route-id="@author.Id" class="" style="">
				<img class="rounded-top" style="width: 100%; height: 360px; object-fit: contain;" alt="@author.Name" src="@author.PhotoPath" />
			</a>
			<div class="p-3">
				<a asp-controller="Author" asp-action="One" asp-route-id="@author.Id" style="text-decoration: none;">
					<h5 class="text-truncate">@author.Name</h5>
				</a>
			</div>
		</div>
	}
}


