<div class="">
    <h2>@ViewBag.title</h2>
	<ul class="list-unstyled row">
		@{
			foreach (var book in ViewBag.books) {
				<li class="d-inline " style="width: auto;">
					<partial name="Partial/_BookItem" model="book"></partial>
				</li>
			}
			if (ViewBag.books.Count == 0) {
				<div class="p-1">
					Пусто
				</div>
			}
		}
	</ul>
