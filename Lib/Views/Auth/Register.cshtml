@{
	ViewData["Title"] = "Регистрация";
}
<div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 mt-3 mx-auto">
	<h2>@ViewData["Title"]</h2>
	@{
		if (@ViewBag.message != null) {
			<div class="alert alert-danger" role="alert">
				@ViewBag.message
			</div>
		}
	}
	<div class="">
		<form asp-controller="Auth" asp-action="Register" method="post">
			<div class="form_group mt-2 mb-2">
				@*<label for="login">Логин:</label>*@
				<input class="form-control" id="login" name="login" type="email" required placeholder="Логин" />
			</div>

			<div class="form_group mt-2 mb-2">
				@*<label for="password1">Пароль:</label>*@
				<input class="form-control" id="password1" name="password1" type="password" required placeholder="Пароль" />
			</div>

			<div class="form_group mt-2 mb-2">
				@*<label for="password2">Подтверить пароль:</label>*@
				<input class="form-control" id="password2" name="password2" type="password" required placeholder="Подтверить пароль" />
			</div>

			<div class="form_group mt-2 mb-2">
				@*<label for="name">Имя:</label>*@
				<input class="form-control" id="name" name="name" type="text" required placeholder="Имя" />
			</div>

			<input class="btn btn-success mt-2 mb-2" type="submit" value="Зарегистрироваться" />

		</form>
	</div>
</div>


